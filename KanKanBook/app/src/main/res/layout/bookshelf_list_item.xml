<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#faf5d9"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:id="@+id/shelf_img"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/shelf_bookTitle"
        android:maxLines="2"
        android:textColor="#000000"
        android:layout_below="@+id/shelf_img"
        android:textSize="14sp"
        android:gravity="center"
        android:text="1111111111"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/shelf_author"
        android:layout_below="@+id/shelf_bookTitle"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:textColor="#fa0972"
        android:textSize="12sp"
        android:text="1111111"
        android:gravity="center"/>


</RelativeLayout>
</android.support.v7.widget.CardView>